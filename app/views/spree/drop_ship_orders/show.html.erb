<% if defined?(SpreeFancy) %>
  <% content_for :subheader do %>
    <h1><%= t(:drop_ship_order_number, number: @drop_ship_order.id) %></h1>
  <% end %>
<% else %>
  <h1><%= t(:drop_ship_order_number, number: @drop_ship_order.id) %></h1>
<% end %>

<div id="drop_ship_info">
  <%= render "details", :drop_ship_order => @drop_ship_order %>
  <%= render "shipment_info", :drop_ship_order => @drop_ship_order if @drop_ship_order.complete? %>
  <%= render "shipping_info", :address => @drop_ship_order.order.ship_address %>
</div>

<h2>Product Information</h2>

<%= render "table", :drop_ship_order => @drop_ship_order %>
