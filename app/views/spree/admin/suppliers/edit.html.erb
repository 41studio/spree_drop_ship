<% if can? :index, Spree::Supplier %>
  <% content_for :page_actions do %>
    <li><%= button_link_to t('.back_to_suppliers'), admin_suppliers_path, :icon => 'icon-arrow-left' %></li>
  <% end %>
<% end %>

<% content_for :page_title do %>
  <%= t('.editing_supplier') + " &ldquo;#{@supplier.name}&rdquo;".html_safe %>
<% end %>

<%= render 'spree/shared/error_messages', :target => @supplier %>

<%= form_for [:admin, @supplier] do |f| %>
  <%= render "form", :form => f %>
  <%= button t("update") %> <%= t('or') %> 
  <% if can? :index, Spree::Supplier %>
    <%= link_to t('cancel'), collection_url %>
  <% else %>
    <%= link_to t('cancel'), spree.account_path %>
  <% end %>
<% end %>
